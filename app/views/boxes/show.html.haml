- model_class = Box
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @box.name
%p
  %strong= model_class.human_attribute_name(:volume) + ':'
  %br
  = @box.volume

.form-actions
  = link_to t("helpers.links.back"), boxes_path, :class => 'btn'
  = link_to t("helpers.links.edit"), edit_box_path(@box), :class => 'btn'
  = link_to t("helpers.links.destroy"), box_path(@box), :method => "delete",
  :data => { :confirm => t("helpers.links.confirm") }, :class => 'btn btn-danger'
