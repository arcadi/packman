- model_class = Box
.page-header
  %h1= model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= '#'
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:volume)
      %th= t("helpers.actions")
  %tbody
    = render(@boxes)

= link_to t("helpers.links.new"), new_box_path, :class => 'btn btn-primary'
