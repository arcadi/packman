%tr
  %td= box_counter + 1
  %td= link_to box.name, box_path(box)
  %td= box.volume
  %td
    = link_to t("helpers.links.edit"), edit_box_path(box), :class => 'btn btn-mini'
    = link_to t("helpers.links.destroy"), box_path(box), :method => :delete,
    :data => { :confirm => t("helpers.links.confirm") }, :class => 'btn btn-mini btn-danger'