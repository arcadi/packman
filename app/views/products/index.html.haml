- model_class = Product
.page-header
  %h1= model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th='#'
      %th= model_class.human_attribute_name(:number)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:width)
      %th= model_class.human_attribute_name(:height)
      %th= model_class.human_attribute_name(:depth)
      %th= model_class.human_attribute_name(:weight)
      %th= model_class.human_attribute_name(:volume)
      %th= model_class.human_attribute_name(:stock_level)
      %th= t("helpers.actions")
  %tbody
    = render(@products )

= link_to t("helpers.links.new"), new_product_path, :class => 'btn btn-primary'
